<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="ip_web_sale_order_form" model="ir.ui.view">
            <field name="name">sale.order.form.ip_web</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <notebook position="inside">
                    <page string="Auto Ship">
                        <group>
                            <field name="auto_ship" attrs="{'readonly': [('processed', '=', True)]}" />
                        </group>
                        <group attrs="{'invisible':[('auto_ship', '=', False)]}">
                            <field name="interval" on_change="on_change_auto_ship_fields(interval, date_order)" 
                            	attrs="{'readonly': [('processed', '=', True)]}" />
                            <field name="end_date" on_change="on_change_auto_ship_fields(interval, date_order)" 
                            	attrs="{'readonly': [('processed', '=', True)]}" />
                            <field name="previous_so_id" />
                            <field name="processed" />
                            <field name="next_auto_ship_date" />
                        </group>
                    </page>
                </notebook>
            </field>
        </record>

    </data>
</openerp>
