<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <template id="sale_order" name="Sale Order">
            <t t-call="website.layout">
                <div class="container">

                    <h3>Sale Order: <t t-esc="sale_order.name" /></h3>
                    <table>
                        <tr>
                            <td>Name</td>
                            <td><t t-esc="sale_order.name" /></td>
                        </tr>
                        <tr>
                            <td>Date</td>
                            <td><t t-esc="sale_order.date_order" /></td>
                        </tr>
                        <tr>
                            <td>Status</td>
                            <td><t t-esc="sale_order.state" /></td>
                        </tr>
                    </table>

                </div>
            </t>
        </template>

    </data>
</openerp>
