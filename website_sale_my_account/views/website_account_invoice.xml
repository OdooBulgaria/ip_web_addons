<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <template id="invoice" name="Invoice">
            <t t-call="website.layout">
                <div class="container">

                    <h3>Invoice: <t t-esc="invoice.name" /></h3>
                    <table>
                        <tr>
                            <td>Name</td>
                            <td><t t-esc="invoice.name" /></td>
                        </tr>
                        <tr>
                            <td>Date</td>
                            <td><t t-esc="invoice.date_invoice" /></td>
                        </tr>
                        <tr>
                            <td>Status</td>
                            <td><t t-esc="invoice.state" /></td>
                        </tr>
                    </table>

                </div>
            </t>
        </template>

    </data>
</openerp>
